<?xml version="1.0" encoding="UTF-8"?>

<root>
    <libraries>
        <library id="gameclientCommonUI"/>
        <library id="chatWindowUIAssets"/>

    </libraries>

    <textstyle
            name="frozen_labyrinth_status_message"
            textColor="0xffe103"
            type="dynamic"
            fontSize="10"
            autoSize="right"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="left"/>

    <textstyle
            name="frozen_labyrinth_status_timer"
            textColor="0xffe103"
            type="dynamic"
            fontSize="10"
            autoSize="right"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="right"/>

    <textstyle
            name="frozen_labyrinth_message_left"
            textColor="0xfefefe"
            type="dynamic"
            fontSize="10"
            autoSize="right"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="left"/>

    <textstyle
            name="frozen_labyrinth_message_center"
            textColor="0xfefefe"
            type="dynamic"
            fontSize="10"
            autoSize="right"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="center"/>

    <textstyle
            name="frozen_labyrinth_message_right"
            textColor="0xfefefe"
            type="dynamic"
            fontSize="10"
            autoSize="right"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="right"/>

    <textstyle
            name="frozen_labyrinth_ranking_headline"
            textColor="0xfefefe"
            type="dynamic"
            fontSize="10"
            autoSize="left"
            wordWrap="false"
            multiline="false"
            embedFonts="false"
            fontName="Verdana"
            bold="true"
            align="right"/>

    <textstyle
            name="frozen_labyrinth_rank_message"
            textColor="0xfefefe"
            type="dynamic"
            fontSize="10"
            autoSize="left"
            embedFonts="false"
            fontName="Verdana"
            align="left"/>

    <skin name="frozen_labyrinth_scrollbar_bgnd" classname="FadableButtonSkin">
        <layer classname="FilledBoxLayer" fillColor="0x0" fillAlpha="0.3">normal</layer>
    </skin>

    <skin name="frozen_labyrinth_label_truncate" classname="LabelSkin" truncateText="true" />

    <template name="RANK_BAR">
        <container name="rank_info" width="390" alignX="center">
            <label name="rank" text="1" registeredSkinName="commonui_default_label" marginTop="9"
                   alignX="left" y="-2" width="40" registeredTextStyleName="frozen_labyrinth_message_center"/>
            <label name="name" text="John Doe" registeredSkinName="frozen_labyrinth_label_truncate" marginTop="9" marginLeft="45"
                   alignX="left" y="-2" width="195" registeredTextStyleName="frozen_labyrinth_rank_message"/>
            <label name="time" text="18/11 23:09" registeredSkinName="commonui_default_label" marginTop="9" marginLeft="250"
                   alignX="left" y="-2" width="100" registeredTextStyleName="frozen_labyrinth_message_left"/>
            <label name="kills" text="4" registeredSkinName="commonui_default_label" marginTop="9" marginLeft="350"
                   alignX="left" y="-2" width="40" registeredTextStyleName="frozen_labyrinth_message_center"/>
        </container>
    </template>

    <template name="FROZEN_LABYRINTH_TABBAR">
        <container name="tabbarContainer" height="20" width="460" marginTop="0" marginLeft="0"
                   marginRight="0" pixelSnapping="true">
            <itemlist name="tabsItemlist" registeredSkinName="commonui_list_mask" layout="horizontal" alignX="right"
                      width="228" itemGap="0" height="20" mouseEnabled="true" mouseChildren="true"
                      cacheSkinMaskAsBitmap="false">
                <itemrenderer height="15" width="113" autoSizeWidth="false" mouseEnabled="true" mouseChildren="true">
                    <button name="tab" registeredSkinName="commonui_tabbarbutton" mouseEnabled="true"
                            autoSizeWidth="true" autoSizeHeight="true" mouseChildren="true"/>
                    <button name="tab_selected" registeredSkinName="commonui_tabbarbutton" mouseEnabled="true"
                            autoSizeWidth="true" visible="false" autoSizeHeight="true" mouseChildren="true"/>
                    <label y="-1" name="tabLabel" registeredSkinName="commonui_default_label"
                           registeredTextStyleName="commonui_tabbar_center" mouseEnabled="false"
                           mouseChildren="false" autoSizeWidth="true" text="?"/>
                </itemrenderer>
            </itemlist>
        </container>
    </template>

    <template name="FROZEN_LABYRINTH_OVERVIEW">
        <container name="overview" visible="false" width="420" marginLeft="20" marginRight="20" marginTop="36"
                   height="267"
                   alignX="left">
            <container name="top" width="420" marginLeft="0" marginRight="0" marginTop="0"
                       registeredSkinName="commonui_darklayer" height="140" alignX="center">
                <container name="frozen_labyrinth_status_msg" width="390" marginLeft="15" height="10" marginRight="15" alignX="left">
                    <label name="frozen_labyrinth_status_message" text="localize:frozen_labyrinth_status_open"
                           registeredTextStyleName="frozen_labyrinth_status_message"
                           marginTop="20" registeredSkinName="commonui_default_label" autoSizeWidth="true"/>
                    <label name="frozen_labyrinth_timer" text="testRight" registeredTextStyleName="frozen_labyrinth_status_timer" marginTop="20"
                           registeredSkinName="commonui_default_label" autoSizeWidth="true" alignX="right"/>
                </container>
                <coreponent registeredSkinName="commonui_horizontal_divider" height="4" width="420" marginTop="50"/>
                <container name="frozen_labyrinth_synk_info" width="390" marginLeft="15" height="30" marginTop="60" marginRight="15" alignX="left">
                    <label name="frozen_labyrinth_synk_location_left" text="-" registeredTextStyleName="frozen_labyrinth_status_message"
                           registeredSkinName="commonui_default_label" autoSizeWidth="true"/>
                    <label name="frozen_labyrinth_synk_location_right" text="-" registeredTextStyleName="frozen_labyrinth_status_timer" alignX="right"
                           registeredSkinName="commonui_default_label" autoSizeWidth="true"/>
                </container>
                <container name="frozen_labyrinth_key_info" width="390" marginLeft="15" height="30" marginTop="95" marginRight="15" alignX="left">
                    <coreponent name="labyrinth_key_img" width="30" height="30" marginLeft="5" marginTop="-6"/>
                    <label name="frozen_labyrinth_key_message" text="Labyrinth Keys:"
                           registeredTextStyleName="frozen_labyrinth_message_left" marginLeft="40"
                           registeredSkinName="commonui_default_label" autoSizeWidth="true"/>
                    <label name="frozen_labyrinth_key_amount" text="9999" registeredTextStyleName="frozen_labyrinth_message_right"
                           registeredSkinName="commonui_default_label" autoSizeWidth="true" alignX="right" marginRight="20"/>
                    <button name="keys_info" marginRight="-5" marginTop="-1" alignX="right" registeredSkinName="commonui_info_button"
                            tooltipData="localize:frozen_labyrinth_overview_keys_desc"/>
                </container>

            </container>
            <container name="bottom" width="420" marginLeft="0" marginRight="0" marginTop="150"
                       height="90" alignX="center">
                <button marginLeft="10" alignX="left" registeredSkinName="commonui_info_button" alignY="top"/>
                <label text="localize:frozen_labyrinth_overview_desc"
                       registeredTextStyleName="frozen_labyrinth_message_left" alignX="left" alignY="top" marginLeft="35"
                       registeredSkinName="commonui_default_label" width="390" autoSizeTextHeight="true"/>
            </container>
        </container>
    </template>

    <template name="FROZEN_LABYRINTH_SYNK_KILLS">
        <container name="synk_kills" width="420" marginLeft="20" marginRight="20" marginTop="36" height="200"
                   alignX="left" registeredSkinName="commonui_darklayer">
            <coreponent registeredSkinName="commonui_horizontal_divider" height="3" width="420" marginTop="33"/>
            <container width="390" marginTop="8" alignX="center">
                <label text="localize:frozen_labyrinth_tab_synk_header_rank"
                       registeredSkinName="commonui_default_label"
                       autoSizeWidth="true" registeredTextStyleName="frozen_labyrinth_ranking_headline"/>
                <label text="NAME"
                       registeredSkinName="commonui_default_label" marginLeft="45"
                       autoSizeWidth="true" registeredTextStyleName="frozen_labyrinth_ranking_headline"/>
                <label text="TIME"
                       registeredSkinName="commonui_default_label" marginLeft="250"
                       autoSizeWidth="true" registeredTextStyleName="frozen_labyrinth_ranking_headline"/>
                <label text="KILLS"
                       registeredSkinName="commonui_default_label" marginLeft="350"
                       autoSizeWidth="true" registeredTextStyleName="frozen_labyrinth_ranking_headline"/>

            </container>
            <container name="body" width="420" marginTop="34" height="135" marginLeft="0">
                <itemlist name="frozen_labyrinth_rankinglist" width="420"
                          autoSizeHeight="true"
                          autoSizeWidth="true"
                          itemGap="0"
                          mouseChildren="true"
                          mouseEnabled="true"
                          layout="vertical"
                          cacheSkinMaskAsBitmap="false"
                          registeredSkinName="commonui_list_mask">


                    <itemrenderer width="420" autoSizeWidth="false" height="30" mouseEnabled="true"
                                  mouseChildren="true">
                        <container name="rank" width="420" marginLeft="0" height="30" alignX="left" registeredSkinName="commonui_darklayer">
                            <reference template="RANK_BAR"/>
                        </container>

                    </itemrenderer>


                </itemlist>
                <scrollbar name="frozen_labyrinth_rewardlist_scrollBar" width="5" autoSizeHeight="true" direction="vertical"
                           marginTop="0"
                           marginBottom="0"
                           marginRight="0"
                           alignX="right"
                           registeredSkinName="frozen_labyrinth_scrollbar_bgnd">
                    <button name="buttonSlider" alignX="center" width="5" height="50"
                            registeredSkinName="commonui_scrollbar_slider"/>
                </scrollbar>
                <bind source="frozen_labyrinth_rewardlist_scrollBar" target="frozen_labyrinth_rankinglist"/>
            </container>
            <coreponent registeredSkinName="commonui_horizontal_divider" height="3" width="420" marginTop="170"/>
            <container name="my_rank" width="420" height="30" marginTop="172" alignX="left" registeredSkinName="commonui_darklayer">
                <reference template="RANK_BAR"/>
            </container>
        </container>
    </template>

    <container name="root" width="460" height="272" mouseEnabled="false" mouseChildren="true">
        <reference template="FROZEN_LABYRINTH_OVERVIEW"/>
        <reference template="FROZEN_LABYRINTH_SYNK_KILLS"/>
        <reference template="FROZEN_LABYRINTH_TABBAR"/>
    </container>
</root>

