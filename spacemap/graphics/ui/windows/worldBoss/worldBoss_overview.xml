<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- LIBS -->
	<libraries>
		<library id="gameclientCommonUI"/>
		<library id="worldBoss_asset"/>
	</libraries>

	<!-- TEXT STYLES -->
	<textstyle  name="world_boss_overview_min_left"
				textColor="0xFFFFFF"
				type="dynamic"
				fontSize="8"
				autoSize="left"
				wordWrap="false"
				multiline="false"
				embedFonts="false"
				fontName="Verdana"
				bold="false"
				align="left"/>

	<textstyle  name="world_boss_overview_headline"
				textColor="0xffbf13"
				type="dynamic"
				fontSize="11"
				autoSize="left"
				wordWrap="false"
				multiline="false"
				embedFonts="false"
				fontName="Verdana"
				bold="true"
				align="left"/>

	<textstyle  name="world_boss_overview_data"
				textColor="0xffbf13"
				type="dynamic"
				fontSize="10"
				autoSize="left"
				wordWrap="false"
				multiline="false"
				embedFonts="false"
				fontName="Verdana"
				bold="false"
				align="left"/>

	<textstyle  name="world_boss_overview_data_right"
				textColor="0xffbf13"
				type="dynamic"
				fontSize="10"
				autoSize="right"
				wordWrap="false"
				multiline="false"
				embedFonts="false"
				fontName="Verdana"
				bold="false"
				align="right"/>

	<textstyle  name="world_boss_overview_slogan"
				textColor="0xfefefe"
				type="dynamic"
				fontSize="10"
				autoSize="center"
				wordWrap="false"
				multiline="false"
				embedFonts="false"
				fontName="Verdana"
				align="center"/>

	<textstyle  name="world_boss_overview_info"
				textColor="0xfefefe"
				type="dynamic"
				fontSize="10"
				autoSize="left"
				wordWrap="true"
				multiline="true"
				embedFonts="false"
				fontName="Verdana"
				align="left"/>

	<!-- SKINS -->
	<skin name="world_boss_overview_filled_box" classname="BasicSkin">
		<layer classname="FilledBoxLayer" fillColor="0x00ff00" fillAlpha="0.5">normal</layer>
	</skin>

	<skin name="world_boss_overview_progressbar" tweenTime="1" classname="ProgressBarSkin" library="worldBoss_asset">
		<layer classname="BitmapLayer" libraryID="progress_bar_bg_full">normal</layer>
		<layer classname="BitmapLayer" libraryID="progress_bar_fill_full">bar</layer>
		<!--<layer classname="BitmapLayer" libraryID="progress_bar_fill_scale9_recolor" scale9grid="5,4,6,5">bar</layer>-->
	</skin>

	<skin name="world_boss_overview_info_image" classname="BasicSkin" library="gameclientCommonUI">
		<layer classname="BitmapLayer" libraryID="icon_info_grey">normal</layer>
	</skin>

	<!-- TEMPLATES -->
	<template name="WORLD_BOSS_OVERVIEW">
		<container  name="overview"
					autoSizeWidth="true" autoWidthMode="parent" autoSizeHeight="true" autoHeightMode="parent">
			<container  name="main"
						width="475" height="435" autoSizeWidth="false" autoSizeHeight="false"
						marginTop="30" alignX="center">

				<container  name="top"
							autoSizeWidth="true" autoWidthMode="parent" height="365" autoSizeHeight="false"
							registeredSkinName="commonui_darklayer">

					<container  name="health" width="425" autoSizeWidth="false" height="45" autoSizeHeight="false"
								marginLeft="20" marginTop="15">
		
						<label  name="health"
								width="300" autoSizeWidth="false" height="15" autoSizeHeight="false"
								registeredTextStyleName="world_boss_overview_headline" registeredSkinName="commonui_default_label"/>

						<label  name="percent" text="100%"
								width="170" autoSizeWidth="false" height="15" autoSizeHeight="false"
								alignX="right"
								registeredTextStyleName="world_boss_overview_data_right" registeredSkinName="commonui_default_label"/>

						<progressbar name="bar"
									 autoSizeWidth="true" autoWidthMode="parent" height="30" autoSizeHeight="false"
									 marginTop="20"
									 registeredSkinName="world_boss_overview_progressbar">
						</progressbar>
					</container>

					<container  name="info" width="425" autoSizeWidth="false" height="45" autoSizeHeight="false"
								marginLeft="20" marginTop="70">
						<label  text="localize:worldBoss_overview_current_tier"
								width="300" autoSizeWidth="false" height="15" autoSizeHeight="false"
								registeredTextStyleName="world_boss_overview_data" registeredSkinName="commonui_default_label"/>

						<label  name="currentTier" text="88"
								width="170" autoSizeWidth="false" height="15" autoSizeHeight="false"
								alignX="right"
								registeredTextStyleName="world_boss_overview_data_right" registeredSkinName="commonui_default_label"/>

						<label  text="localize:worldBoss_overview_event_period"
								width="300" autoSizeWidth="false" height="15" autoSizeHeight="false"
								marginTop="15"
								registeredTextStyleName="world_boss_overview_data" registeredSkinName="commonui_default_label"/>

						<label  name="endTime" text="88 hrs 88 min 88 sec"
								width="170" autoSizeWidth="false" height="15" autoSizeHeight="false"
								marginTop="15" alignX="right"
								registeredTextStyleName="world_boss_overview_data_right" registeredSkinName="commonui_default_label"/>

						<label name="openTimeLabel"  text="localize:worldboss_overview_open_time"
								width="300" autoSizeWidth="false" height="15" autoSizeHeight="false"
								marginTop="30"
								registeredTextStyleName="world_boss_overview_data" registeredSkinName="commonui_default_label"/>

						<label  name="attemptsLeft" text="88 hrs 88 min 88 sec"
								width="170" autoSizeWidth="false" height="15" autoSizeHeight="false"
								marginTop="30" alignX="right"
								registeredTextStyleName="world_boss_overview_data_right" registeredSkinName="commonui_default_label"/>
					</container>

					<container name="marketing" width="425" autoSizeWidth="false" height="235" autoSizeHeight="false"
							   marginLeft="20" marginTop="130">
						<coreponent name="banner"
									autoSizeWidth="true" autoWidthMode="parent" height="185" autoSizeHeight="false"/>

						<label  name="slogan"
								autoSizeWidth="true" autoWidthMode="parent" height="15" autoSizeHeight="false"
								marginTop="200"
								registeredTextStyleName="world_boss_overview_slogan" registeredSkinName="commonui_default_label"/>
					</container>
				</container>

				<container  name="info"
							autoSizeWidth="true" autoWidthMode="parent" height="60" autoSizeHeight="false"
							alignY="bottom" marginLeft="20">
					<coreponent  alignX="left" registeredSkinName="world_boss_overview_info_image" marginTop="-2"/>

					<label  name="description"
							width="400" autoSizeWidth="false" autoSizeHeight="true" autoHeightMode="parent"
							marginLeft="30"
							registeredTextStyleName="world_boss_overview_info" registeredSkinName="commonui_default_label"/>
				</container>
			</container>
		</container>
	</template>

	<!-- CONTENT -->
	<container name="root"
			   width="535" height="500" autoSizeWidth="false" autoSizeHeight="false"
			   mouseEnabled="false" mouseChilderen="true">
		<reference template="WORLD_BOSS_OVERVIEW"/>
	</container>
</root>
