<?xml version="1.0" encoding="UTF-8"?>

<root>
    <!-- LIBS -->
    <libraries>
        <library id="craftingWindow"/>
        <library id="settingsWindowFUI"/>
        <library id="module_equipment_lib"/>
        <library id="gameclientCommonUI"/>
        <library id="chatWindowUIAssets" />
    </libraries>

    <textstyle
            name="crafting_tab_center_modern_textstyle"
            textColor="0x6FB2CB"
            type="dynamic"
            fontSize="9"
            autoSize="center"
            wordWrap="true"
            multiline="true"
            embedFonts="false"
            fontName="Verdana"
            align="center"/>

    <skin name="popup_label_button_green" classname="FadableButtonSkin" library="settingsWindowFUI" >
        <layer classname="BitmapLayer" libraryID="btn_green_normal" >normal</layer>
        <layer classname="BitmapLayer" libraryID="btn_green_hover" >over</layer>
        <layer classname="BitmapLayer" libraryID="btn_inactive" >disabled</layer>
    </skin>

    <skin name="reroll_popup_box_outline" classname="CheckBoxSkin">
        <layer classname="FilledBoxLayer" lineColor="0x00ccff" fillColor="0xdbc13b" fillAlpha="0.3" lineAlpha="1">normal.selected</layer>
        <layer classname="FilledBoxLayer" lineColor="0x00ccff" fillColor="0xdbc13b" fillAlpha="0" lineAlpha="1">normal</layer>
        <layer classname="FilledBoxLayer" lineColor="0x00ccff" fillColor="0xdbc13b" fillAlpha="0.3" lineAlpha="1">over.selected</layer>
        <layer classname="FilledBoxLayer" lineColor="0x00ccff" fillColor="0xdbc13b" fillAlpha="0" lineAlpha="1">over</layer>
    </skin>

    <skin name="reroll_popup_box_clear_outline" classname="ButtonSkin">
        <layer classname="FilledBoxLayer" lineColor="0x00ccff" fillColor="0xdbc13b" fillAlpha="0" lineAlpha="1">normal</layer>
    </skin>

    <template name="reroll_item_result_panel_template">
        <container name="rerollItemGridContainer"
                   mouseEnabled="false"
                   marginLeft="50"
                   marginTop="10"
                   width="469">


            <Grid name="rerollItemsGrid"
                  marginLeft="18"
                  marginTop="25"
                  itemGapX="6"
                  itemGapY="3"
                  width="550"
                  height="74"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">

                <itemrenderer width="37"
                              height="74"
                              itemGap="0"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="hitlayer"
                                registeredSkinName="commonui_hitlayer"
                                mouseEnabled="true"
                                mouseChildren="true"
                                autoSizeWidth="true"
                                autoSizeHeight="true"
                                alpha="0"
                                tooltipTemplateID="commonui_tooltip_simple"/>

                    <coreponent name="pic"
                                width="30"
                                height="30"
                                alignX="center"
                                alignY="top"/>

                    <button name="hover"
                            width="30"
                            height="30"
                            alignX="center"
                            alignY="top"
                            registeredSkinName="crafting_itemlist_green"/>

                    <label name="itemName"
                           marginTop="30"
                           width="48"
                           text="0"
                           alignX="center"
                           alignY="top"
                           registeredTextStyleName="reroll_grid_item_desc"/>
                    <label name="itemUpgradeLevel"
                                   text=""
                                   alignX="left"
                                   alignY="bottom"
                                   marginLeft="8"
                                   marginBottom="75"
                                   registeredTextStyleName="upgrade_grid_item"/>
                </itemrenderer>

            </Grid>

            <scrollbar name="item_grid"
                       height="74"
                       width="6"
                       autoSizeWidth="false"
                       direction="vertical"
                       scrollSpeed="3"
                       alignX="right"
                       marginRight="12"
                       marginTop="24"
                       registeredSkinName="commonui_scrollbar_bgnd_dark">

                <button name="buttonSlider"
                        width="4"
                        alignX="center"
                        registeredSkinName="commonui_scrollbar_slider"/>

            </scrollbar>

            <bind source="item_grid"
                  target="rerollItemsGrid"
                  type="scrollcontainer"/>

<!--            <label name="rowNumber" marginTop="3" width="70" text="test" alignX="right" alignY="top" registeredTextStyleName="reroll_item_desc"/>-->
        </container>
    </template>

    <template name="old_stats_panel_template">
        <container name="oldStatsContainer"
                   marginLeft="20"
                   marginTop="90"
                   width="280"
                   height="330">

            <checkbox name="background"
                        autoSizeWidth="true"
                        autoSizeHeight="true"
                        text=""
                        registeredSkinName="reroll_popup_box_outline"/>

            <label name="stats"
                   marginLeft="10"
                   text="localize:reroll_previous_stats"
                   marginTop="5"
                   width="200"
                   registeredTextStyleName="reroll_header_font"/>

            <Grid name="statsGrid"
                  marginTop="30"
                  marginLeft="10"
                  width="270"
                  itemGapX="3"
                  itemGapY="3"
                  height="250"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">

                <itemrenderer width="130"
                              height="42"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="ingredientListBg" autoSizeWidth="true" height="42" registeredSkinName="crafting_vertical_list_bg_skin"/>
                    <coreponent name="img" marginTop="6" marginLeft="6" width="32" height="32" alignX="left" alignY="center"/>
                    <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="5" marginLeft="5" alignX="left" alignY="center"/>
                    <label name="item_stat_positive" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_green"/>
                    <label name="item_stat_negative" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_red"/>

                </itemrenderer>

            </Grid>

            <checkbox name="checkBox"
                      marginLeft="240"
                      marginTop="5"
                      registeredSkinName="commonui_checkbox16x16_blue"/>

            <label name="retainCost"
                   marginTop="150"
                   marginLeft="10"
                   text="localize:reroll_salvage_costs"
                   alignX="left"
                   width="130"
                   registeredTextStyleName="reroll_header_font"/>

            <Grid name="retainCostGrid"
                  marginTop="185"
                  marginLeft="10"
                  width="320"
                  itemGapX="3"
                  itemGapY="5"
                  height="250"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">
                <itemrenderer
                        width="260"
                        height="42"
                        autoSizeWidth="false"
                        mouseEnabled="true"
                        mouseChildren="true">
                    <coreponent name="retainInfoBg_discount" autoSizeWidth="true" height="36" registeredSkinName="crafting_vertical_list_bg_skin_orange" visible="false"/>
                    <coreponent name="retainInfoBg" autoSizeWidth="true" height="36" registeredSkinName="crafting_vertical_list_bg_skin"/>
                    <coreponent name="img" marginTop="2" marginLeft="6" width="32" height="32" alignX="left" mouseEnabled="true"/>
                    <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="2" marginLeft="5" alignX="left"/>
                    <label height="10" width="60" name="item_name" alignX="left" alignY="top" marginTop="2" marginLeft="43" text="ABR" registeredTextStyleName="reroll_item_name"/>
                    <label height="20" width="120" name="item_amt" alignX="left" alignY="top" marginTop="16" marginLeft="43" text="458 / 4"
                           useHTML="true" registeredTextStyleName="reroll_item_desc"/>
                    <button name="help" alignX="right" alignY="top" marginTop="12" marginRight="1" tooltipTemplateID="commonui_tooltip_html_text" registeredSkinName="commonui_info_button"/>

                </itemrenderer>
            </Grid>
            <container name="retainInfo" width="150" marginTop="185" alignX="left" >
            </container>
        </container>
    </template>

    <template name="new_stats_panel_template">
        <container name="newStatsContainer"
                   marginLeft="310"
                   marginTop="90"
                   width="280"
                   height="330">

            <checkbox name="background"
                        autoSizeWidth="true"
                        autoSizeHeight="true"
                        text=""
                        registeredSkinName="reroll_popup_box_outline"/>

            <label name="stats"
                   marginLeft="10"
                   marginTop="5"
                   text="localize:reroll_new_stats"
                   width="200"
                   registeredTextStyleName="reroll_header_font"/>

            <Grid name="statsGrid"
                  marginTop="30"
                  marginLeft="10"
                  width="270"
                  itemGapX="3"
                  itemGapY="3"
                  height="250"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">

                <itemrenderer width="130"
                              height="42"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="ingredientListBg" autoSizeWidth="true" height="42" registeredSkinName="crafting_vertical_list_bg_skin"/>
                    <coreponent name="img" marginTop="6" marginLeft="6" width="32" height="32" alignX="left" alignY="center"/>
                    <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="5" marginLeft="5" alignX="left" alignY="center"/>
                    <label name="item_stat_positive" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_green"/>
                    <label name="item_stat_negative" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_red"/>

                </itemrenderer>

            </Grid>

            <checkbox name="checkBox"
                      marginLeft="240"
                      marginTop="5"
                      registeredSkinName="commonui_checkbox16x16_blue"/>

        </container>
    </template>

    <template name="ok_button_template">
        <container name="bottom"
                   marginTop="300"
                   marginLeft="250"
                   autoSizeWidth="true" height="30">
            <button name="okButton"
                    width="100"
                    height="30"
                    marginTop="130"
                    alignX="left"
                    text="localize:btn_ok"
                    registeredSkinName="popup_label_button_green"
                    registeredTextStyleName="commonui_button_whitetxt_16pt"/>

        </container>
    </template>

    <container name="root"
               width="720"
               height="435"
               mouseEnabled="false"
               mouseChildren="true">
        <reference template="reroll_item_result_panel_template"/>
        <reference template="old_stats_panel_template"/>
        <reference template="new_stats_panel_template"/>
        <reference template="ok_button_template"/>

    </container>
</root>